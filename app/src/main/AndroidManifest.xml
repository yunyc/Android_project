<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.config.ConfigActivity"></activity>
        <activity
            android:name=".ui.register.activity.MusicActivity"
            android:label="@string/title_activity_music"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AlarmActivity" />
        <activity
            android:name=".ui.register.activity.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".ui.main.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ui.main.fragment.alarm.AlarmReceiver" />

        <service
            android:name=".ui.main.fragment.alarm.AlarmService"
            android:enabled="true" />
    </application>

</manifest>